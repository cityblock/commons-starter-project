{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "server",
    "rules",
    "coverage",
    "scripts",
    "**/spec.helpers.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}