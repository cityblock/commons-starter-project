{
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "lib": ["es2016", "es2017", "dom", "esnext.asynciterable"],
    "strict": true,
    "skipLibCheck": true // NOTE: Remove once apollo fixes https://github.com/apollographql/react-apollo/issues/1286 and https://github.com/apollographql/apollo-client/issues/2503
  },
  "include": ["./server/**/*.ts", "./app/**/*.ts", "./app/**/*.tsx", "./declarations/*"],
  "exclude": [
    "node_modules",
    "public",
    "server-compiled",
    "coverage",
    "server/models/migrations",
    "server/models/seeds"
  ]
}
