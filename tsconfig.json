{
  "compilerOptions": {
    "removeComments": false, // comments are required for bundle splitting using webpackChunkName
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es2016", "es2017", "dom", "esnext.asynciterable"],
    "strict": true
  },
  "include": [
    "./scripts/**/*.ts",
    "./server/**/*.ts",
    "./server/**/*.tsx",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./declarations/*"
  ],
  "exclude": ["public", "server-compiled", "server/models/migrations", "server/models/seeds"]
}
