{
  "compilerOptions": {
    "removeComments": false, // comments are required for bundle splitting using webpackChunkName
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "lib": [
      "es2016",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "strict": true
  },
  "include": [
    "./server/**/*.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./declarations/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "server-compiled",
    "coverage",
    "server/models/migrations",
    "server/models/seeds"
  ]
}